{
  "compilerOptions": {
    "target": "ES6",                           // ES6 o la versi贸n de JS que necesites
    "module": "ES6",                           // Usar ES6 modules
    "declaration": true,                       // Generar archivos .d.ts
    "outDir": "./dist",                        // Carpeta de salida para los archivos compilados
    "rootDir": "./src",                // Carpeta de salida para los archivos compilados
    "strict": true,                            // Opcional: estricta verificaci贸n de tipos
    "esModuleInterop": true,                   // Permitir interoperabilidad entre ES y CommonJS
    "moduleResolution": "node",                // Resolver m贸dulos como lo hace Node.js
    "allowJs": true,                           // Permitir la compilaci贸n de archivos JavaScript
    "checkJs": false                            // Opcional: chequea los tipos en archivos JS
  },
  "include": [
    "src/**/*"                                // Incluir todos los archivos de entrada
  ],
  "exclude": ["node_modules", "dist/js"]
}