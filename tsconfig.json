{
  "compilerOptions": {
    "target": "ES6",                           // ES6 o la versión de JS que necesites
    "module": "CommonJS",                           // Usar ES6 modules
    "declaration": true,                       // Generar archivos .d.ts
    "outDir": "./dist",        
    "rootDir": "./src",                // Carpeta de salida para los archivos compilados
    "strict": true,                            // Opcional: estricta verificación de tipos
    "esModuleInterop": true,                   // Permitir interoperabilidad entre ES y CommonJS
    "moduleResolution": "node",                // Resolver módulos como lo hace Node.js
    "allowJs": true,                           // Permitir la compilación de archivos JavaScript
    "checkJs": false                            // Opcional: chequea los tipos en archivos JS
  },
  "include": [
    "src/**/*.js"                              // Incluye archivos JavaScript también
  ],
  "exclude": [
    "node_modules"
  ]
}